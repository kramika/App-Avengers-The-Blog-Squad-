<%- include("partials/header"); -%>

<h1>Edit Post</h1>

<form method="POST" action="/posts/<%= postId %>?_method=PUT">
  <div class="form-group">
  <label for="postTitle">Title</label>
  <input class="form-control" type="text" name="postTitle" value="<%= title %>">

  <label for="postBody">Content</label>
  <textarea class="form-control" name="postBody" rows="5" cols="30" id="postBody"><%= content %></textarea>
  </div>
  <button class="btn btn-primary" type="submit"name="button" >Update</button>
</form>

<%- include("partials/footer"); -%>
